<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartdental4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.DiaryActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.LoadingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SetClockActivity"
            android:label="@string/title_activity_set_clock" >
        </activity>
        <activity
            android:name=".views.AlarmDialogue"
            android:label="@string/title_activity_alarm_dialogue" >
        </activity>
        <activity
            android:name=".views.ForumActivity"
            android:label="@string/title_activity_forum" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".views.DoctorAdviceActivity"
            android:label="@string/title_activity_doctor_advice" >
        </activity>
        <activity
            android:name="com.example.smartdental4.views.ShareActivity"
            android:label="@string/title_activity_share"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
